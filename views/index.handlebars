<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"><i class="fas fa-hamburger"></i>Burger Eater<i class="fas fa-hamburger"></i></h1>
    <p class="lead">We gonna make burgers. We gonna eat burgers.</p>
  </div>
</div>

{{!-- START BURGER DIV --}}
<div class="row outter-row">
  <div class="col-sm-9">
    
    <div class="row inner-row">

      <div class="col-sm-6 undevoured-div" >
        <h2 id="unEatenBurgsLabel">Burgers that are un-eaten!</h2>

        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>

      <div class="col-sm-6 devoured-div">
        <h2 id="eatenBurgsLabel">Burgers that are devoured!</h2>

        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>{{!--  END BURGER DIV --}}

<div class="col-lg-6 order-div">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Is this burger eaten or un-eaten?</label><br>
    <input type="radio" name="devoured" value="1" checked> Eaten!<br>
    <input type="radio" name="devoured" value="0"> Un Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
